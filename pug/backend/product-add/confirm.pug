extends ../../layout/_layout.pug

block title
    title 新商品登録(確認)

block content
    h2 新商品登録(確認)
    form(th:action="@{/admin/product-add/complete}" method="post" th:object="${productAddForm}")
        table
            tr
                td 商品名
                td(th:text="*{name}")
            tr
                td 単価
                td(th:text="${#numbers.formatInteger(productAddForm.price, 3, 'COMMA')} + '円'")
            tr
                td 在庫数
                td(th:text="*{stock}")
            tr
                td 商品カテゴリ
                td(th:text="${category.name}")
            tr
                td 画像
                td: img(th:src="${uploadImage}" width="150")
        a.cancel(href="/admin/product-add/cancel") キャンセル
        span  
        a.cancel(href="/admin/product-add") 戻る
        input(type="submit" value="完了")