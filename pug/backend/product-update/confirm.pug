extends ../../layout/_layout.pug

block title
    title 商品修正(確認)

block content
    h2 商品修正(確認)
    form(th:action="@{/admin/product-update/complete}" method="post" th:object="${productUpdateForm}")
        table
            tr
                td 商品名
                td(th:text="*{name}")
            tr
                td 単価
                td(th:text="${#numbers.formatInteger(productUpdateForm.price, 3, 'COMMA')} + '円'")
            tr
                td 在庫数
                td(th:text="*{stock}")
            tr
                td 商品カテゴリ
                td(th:text="${category.name}")
            tr
                td 画像
                td: img(th:src="@{__${uploadImage}__}" width="150")
        a.cancel(href="/admin/product-update/cancel") キャンセル
        span  
        a.cancel(th:href="@{/admin/product-update/__*{id}__}") 戻る
        input(type="submit" value="完了")