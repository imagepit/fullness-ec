<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fullness.ec.repository.EmployeeRepository">
    <select id="findAll" resultType="com.fullness.ec.entity.Employee">
        select
            id,
            name,
            name_kana as namekana,
            department_id as departmentid
        from
            employee
    </select>
    <select id="findById" resultType="com.fullness.ec.entity.Employee">
        select
            id,
            name,
            name_kana as namekana,
            department_id as departmentid
        from
            employee
        where
            id = #{id}
    </select>
</mapper>