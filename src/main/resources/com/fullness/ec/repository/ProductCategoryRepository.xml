<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fullness.ec.repository.ProductCategoryRepository">
    <select id="findAll" resultType="com.fullness.ec.entity.ProductCategory">
        select
            id,
            name
        from
            product_category
    </select>
    <select id="findById" resultType="com.fullness.ec.entity.ProductCategory">
        select
            id,
            name
        from
            product_category
        where
            id = #{id}
    </select>
    <insert id="insert" parameterType="com.fullness.ec.entity.ProductCategory">
        <selectKey keyProperty="id" resultType="int" order="BEFORE">
            select nextval('product_category_id_seq')
        </selectKey>
        insert into product_category values(#{id},#{name})
    </insert>
</mapper>